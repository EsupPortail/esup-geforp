{% extends "@SygeforFront/base.html.twig" %}

{% block header %}
    <header>
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-xs-12">
                    <h3>Plate-forme de gestion des formations</h3>
                    <h1>Programme des formations</h1>
                </div>
            </div><!-- /row -->
            <ul class="nav nav-tabs">
                <li><a href="{{ path('front.public.myprogram') }}" title="Accès aux formations de mon établissement" class="button secondary">L'offre de formation de mon établissement</a></li>
                <li class="active"><a href="{{ path('front.public.search') }}" title="Rechercher une formation" class="button secondary" >Rechercher une formation</a></li>
                {% if multiEtab == true %}
                <li><a href="{{ path('front.public.allprogram') }}" title="Accès aux formations de tous les établissements et pour tous les publics" >Toutes les formations</a></li>
                {% endif %}
            </ul>

        </div> <!-- /container -->
    </header>
{% endblock %}

{% block body %}
    <div class="container">
        <section>
            <h1>Résultat(s) de recherche
                        <a class="col-md-offset-1 btn btn-primary btn-lg" href="{{ path('front.public.search') }}" title="Nouvelle recherche" >
                            <i class="glyphicon glyphicon-search"></i>
                            &nbsp;Nouvelle recherche
                        </a>
            </h1>
            <div class="outer-wrap">
                <div class="inner-wrap">
                    <!-- RESULTS -->
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="row">
                                <div class="col-xs-12 col-md-9">
                                    {% if search.items is not defined or search.items | length == 0 %}
                                    <div class="row">
                                        <div class="col-xs-12">
                                            <h3 class="no-session">
                                                Aucune session n'est disponible pour le moment.
                                            </h3>
                                        </div>
                                    </div>
                                    {% else %}
                                        <div class="session session--list">
{#                                            {{ form_start(form) }}     #}
                                            {% set counter = 0 %}
                                            {% for session in search.items %}
                                                {% if session.displayOnline == true %}
                                                    {% set theme = session.training.theme %}

                                                    <div class="panel-body">
                                                        {% include '@SygeforFront/Public/program/session-list-item.html.twig' %}
                                                    </div>
                                                {%  endif %}
                                                {% if session.sessionType == 'A venir' %}
                                                    {% set counter = counter + 1 %}
                                                {% endif %}
                                            {% endfor %}
                                        </div>
                                    {% endif %}

                                        {#    {% include('@SygeforFront/pagination.html.twig') %} #}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-primary"> Valider les inscriptions aux alertes </button>
                        </div>
                    </div>
                    <div style="display: none">
                        {{ form_rest(form) }}
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </section>
    </div>


{% endblock body %}
