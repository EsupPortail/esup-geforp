{% extends "Core/views/User/layout.html.twig" %}
{% form_theme form 'Core/views/Form/fields.html.twig' %}
{% set breadcrumb_item = "Droits d'accès" %}

{% block subcontent %}
    {{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="form-group">
        <label class="control-label col-sm-2 control-label required">
            Droits d'accès
        </label>
        <div class="col-sm-10">
            {% for right in form.accessRights %}
                {% if right.vars.value == 0 %}
                    <div class="panel panel-default">
                        <div class="panel-heading">Utilisateurs</div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-xs-12">
                                    {{ form_widget(right) }}
                                </div>
                            </div>
                {% elseif right.vars.value == 2 %}
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">Vocabulaires</div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-xs-12">
                                    {{ form_widget(right) }}
                                </div>
                            </div>
                {% elseif right.vars.value == 5 %}
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">Formations</div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-xs-12">
                                    {{ form_widget(right) }}
                                </div>
                            </div>
                {% elseif right.vars.value == 13 %}
                    </div>
                    </div>
                    <div class="panel panel-default">
                    <div class="panel-heading">Stagiaires</div>
                    <div class="panel-body">
                    <div class="row">
                        <div class="col-xs-12">
                            {{ form_widget(right) }}
                        </div>
                    </div>
                {% elseif right.vars.value == 21 %}
                    </div>
                    </div>
                    <div class="panel panel-default">
                    <div class="panel-heading">Inscriptions</div>
                    <div class="panel-body">
                    <div class="row">
                        <div class="col-xs-12">
                            {{ form_widget(right) }}
                        </div>
                    </div>
                {% elseif right.vars.value == 29 %}
                    </div>
                    </div>
                    <div class="panel panel-default">
                    <div class="panel-heading">Etablissements</div>
                    <div class="panel-body">
                    <div class="row">
                        <div class="col-xs-12">
                            {{ form_widget(right) }}
                        </div>
                    </div>
                {% elseif right.vars.value == 37 %}
                    </div>
                    </div>
                    <div class="panel panel-default">
                    <div class="panel-heading">Etablissements</div>
                    <div class="panel-body">
                    <div class="row">
                        <div class="col-xs-12">
                            {{ form_widget(right) }}
                        </div>
                    </div>
                {% elseif right.vars.value == 44 %}
                            <div class="row">
                                <div class="col-xs-12">
                                    {{ form_widget(right) }}
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                            <div class="row">
                                <div class="col-xs-12">
                                    {{ form_widget(right) }}
                                </div>
                            </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Enregistrer</button>
        </div>
    </div>
    {{ form_widget(form._token) }}
    {{ form_end(form, {'render_rest': false}) }}
{% endblock %}

