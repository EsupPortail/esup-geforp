<html>
<head>
    <link href="{{ app.request.getSchemeAndHttpHost() ~ asset('assets/styles/pdf.css') }}" rel="stylesheet" type="text/css" />
    {% block head %}{% endblock %}
</head>
<body class="organization-{{ organization.code }} pdf">
    <div class="row">
        <div class="col-xs-2">
            <img height="100px;" src="{{ app.request.getSchemeAndHttpHost() ~ asset('assets/img/organization/' ~ organization.code ~ '/logo.png') }}" />
        </div>
        <div class="col-xs-10">
            <strong>{{ organization.name }}</strong><br>
            {{ organization.fullAddress|nl2br }}
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            {% block body %}{% endblock %}
        </div>
    </div>
</body>
